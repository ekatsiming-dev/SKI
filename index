                { name: 'é›ªæ¿/é›™æ¿é›ªæ–', category: 'rent', description: 'åœ¨é‡æ¾¤ç•¶åœ°é›ªå…·åº—ç§Ÿç”¨ï¼Œæ–¹ä¾¿ä¸”å°ˆæ¥­ã€‚' },
                { name: 'é›ªé‹ (Boots)', category: 'rent', description: 'å°ºå¯¸åˆè…³æœ€é‡è¦ï¼Œç”±å°ˆæ¥­åº—å®¶å”åŠ©æŒ‘é¸ã€‚' },
                { name: 'å®‰å…¨å¸½ (Helmet)', category: 'rent', description: 'å®‰å…¨ç¬¬ä¸€ï¼å¼·çƒˆå»ºè­°ç§Ÿç”¨ã€‚' },
                { name: 'è­·ç…§/èº«åˆ†è­‰', category: 'pack', description: 'æœ€é‡è¦çš„èº«åˆ†è­‰æ˜æ–‡ä»¶ã€‚' },
                { name: 'æ—¥å¹£ç¾é‡‘/ä¿¡ç”¨å¡', category: 'pack', description: 'æº–å‚™è¶³å¤ çš„ç¾é‡‘ä»¥å‚™ä¸æ™‚ä¹‹éœ€ã€‚' },
                { name: 'å€‹äººè—¥å“', category: 'pack', description: 'æ„Ÿå†’è—¥ã€è…¸èƒƒè—¥ã€æ­¢ç—›è—¥ã€ç— ç—›è²¼å¸ƒç­‰ã€‚' },
                { name: 'é˜²æ›¬ä¹³/è­·å”‡è†', category: 'pack', description: 'é›ªåœ°ç´«å¤–ç·šå¼·çƒˆï¼Œç©ºæ°£ä¹¾ç‡¥ã€‚' },
