    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const checklistData = [
                { name: 'é‹å‹•æ’æ±—ä¸Šè¡£', category: 'buy', description: '2-3ä»¶ï¼Œçµ•å°é¿å…æ£‰è³ªï¼é¸æ“‡èšé…¯çº–ç¶­æˆ–ç¾Šæ¯›æè³ªã€‚' },
